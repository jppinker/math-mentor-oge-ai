{
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/process-user-query",
      "destination": "/api/proxy-chat"
    }
  ],
  "headers": [
    {
      "source": "/api/process-user-query",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Accel-Buffering",
          "value": "no"
        },
        {
          "key": "Transfer-Encoding",
          "value": "chunked"
        }
      ]
    }
  ]
}